    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
<div class="container">
    <h1 style="text-align: center">Donor addition form</h1>
    <div class="panel panel-primary">
        <div class="panel-heading">Donor Details</div>
        <div class="panel-body">
                <form role="form" method="post" action="/api/addBlog" id="contact-form" class="contact-form">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input type="text" class="form-control" name="name" autocomplete="off" id="name" placeholder="Enter Name">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="phone">Phone</label>
                                <input type="text" class="form-control" name="phone" autocomplete="off" id="phone" placeholder="Enter your contect no..">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="text" class="form-control" name="email" autocomplete="off" id="email" placeholder="Enter Email Id..">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="article">Article</label>
                                <input type="text" class="form-control" name="article" autocomplete="off" id="article" placeholder="Enter article">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="article_des">Article Description</label>
                                <input type="text" class="form-control" name="article_des" autocomplete="off" id="article_des" placeholder="Article description">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="addr">Address</label>
                                <textarea class="form-control textarea" rows="5" name="addr" id="addr" placeholder="Please enter your Address"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" class="btn main-btn pull-right btn-success">Submit</button>
                        </div>
                    </div>
                </form>
        </div>
    </div>

</div>
</body>
</html>


